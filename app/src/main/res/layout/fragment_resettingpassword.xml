<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/reSettingPassword_et_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.552"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/reSettingPassword_tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        android:text="비밀번호 확인"
        app:layout_constraintBottom_toBottomOf="@+id/reSettingPassword_et_Confirmpassword"
        app:layout_constraintEnd_toStartOf="@+id/reSettingPassword_et_Confirmpassword" />

    <EditText
        android:id="@+id/reSettingPassword_et_Confirmpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/reSettingPassword_et_password"
        app:layout_constraintTop_toBottomOf="@+id/reSettingPassword_et_password" />

    <TextView
        android:id="@+id/reSettingPassword_tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        android:text="비밀번호"
        app:layout_constraintBottom_toBottomOf="@+id/reSettingPassword_et_password"
        app:layout_constraintEnd_toStartOf="@+id/reSettingPassword_et_password" />

</androidx.constraintlayout.widget.ConstraintLayout>